{
  "name": "erpgas-monorepo",
  "private": true,
  "workspaces": ["web", "functions", "desktop"],
  "scripts": {
    "dev:web": "npm --prefix web run dev",
    "build:web": "npm --prefix web run build",
    "test:web": "npm --prefix web run test",
    "dev:functions": "npm --prefix functions run dev",
    "build:functions": "npm --prefix functions run build",
    "test:functions": "npm --prefix functions run test",
    "dev:desktop": "npm --prefix desktop run start",
    "build:desktop": "npm --prefix web run build && npm --prefix desktop run build",
    "firebase:emulators": "firebase emulators:start",
    "deploy": "firebase deploy --only hosting,functions"
  },
  "devDependencies": {
    "firebase-tools": "^13.11.2"
  }
}
